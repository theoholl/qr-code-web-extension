    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
